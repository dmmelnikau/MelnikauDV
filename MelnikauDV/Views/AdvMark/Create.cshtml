@model MelnikauDV.Models.AdvMark

@{
    ViewData["Title"] = "ОЦенить рекламу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Оценка рекламы</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
    <label asp-for="Mark" class="control-label"></label>
    <input asp-for="Mark" class="form-control" />
    <span asp-validation-for="Mark" class="text-danger"></span>
                 </div>
            <div class="form-group">
                <label asp-for="AdvertisementId" class="control-label"></label>
                <select asp-for="AdvertisementId" class ="form-control" asp-items="ViewBag.AdvertisementId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Оценить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
