@model IEnumerable<MelnikauDV.Models.AdvMark>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Оценка рекламы</h1>

<p>
    <a asp-action="Create">Оценить рекламу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["MarkSortParm"]">Оценка</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advertisement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Advertisement.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            
        </tr>
}
    </tbody>
</table>
